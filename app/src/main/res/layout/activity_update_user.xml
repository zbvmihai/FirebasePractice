<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UpdateUserActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivUpdateUserImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/account_box"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/to_select_a_profile_image_click_on_the_picture" />

    <EditText
        android:id="@+id/etUpdateName"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:autofillHints="Name"
        android:ems="10"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etUpdateAge"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_age"
        android:inputType="number"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etUpdateEmail"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_e_mail"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck" />

    <ProgressBar
        android:id="@+id/pbUpdateUser"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonUpdateUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:text="@string/update_user"
        android:textSize="18sp" />


</LinearLayout>